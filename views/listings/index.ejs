<% layout("/layouts/boilerplate") %>
  <div class="filters-wrapper">
    <!-- Prev Arrow -->
    <button id="filter-prev" class="filter-arrow">
      <i class="fa-solid fa-chevron-left"></i>
    </button>

    <div id="filters-container">

      <a href="/listings?category=trending" class="filter <%= activeCategory==='trending' ? 'active' : '' %>">
        <i class="fa-solid fa-fire"></i>
        <span>Trending</span>
      </a>

      <a href="/listings?category=rooms" class="filter <%= activeCategory==='rooms' ? 'active' : '' %>">
        <i class="fa-solid fa-bed"></i>
        <span>Room</span>
      </a>

      <a href="/listings?category=beach" class="filter <%= activeCategory==='beach' ? 'active' : '' %>">
        <i class="fa-solid fa-umbrella-beach"></i>
        <span>Beach</span>
      </a>

      <a href="/listings?category=iconic cities" class="filter <%= activeCategory==='iconic cities' ? 'active' : '' %>">
        <i class="fa-solid fa-city"></i>
        <span>Iconic Cities</span>
      </a>

      <a href="/listings?category=cabins" class="filter <%= activeCategory==='cabins' ? 'active' : '' %>">
        <i class="fa-solid fa-house"></i>
        <span>Cabins</span>
      </a>

      <a href="/listings?category=mountains" class="filter <%= activeCategory==='mountains' ? 'active' : '' %>">
        <i class="fa-solid fa-mountain"></i>
        <span>Mountain</span>
      </a>

      <a href="/listings?category=amazing pools" class="filter <%= activeCategory==='amazing pools' ? 'active' : '' %>">
        <i class="fa-solid fa-person-swimming"></i>
        <span>Amazing Pools</span>
      </a>

      <a href="/listings?category=campings" class="filter <%= activeCategory==='campings' ? 'active' : '' %>">
        <i class="fa-solid fa-campground"></i>
        <span>Campings</span>
      </a>

      <a href="/listings?category=farms" class="filter <%= activeCategory==='farms' ? 'active' : '' %>">
        <i class="fa-solid fa-tractor"></i>
        <span>Farms</span>
      </a>

      <a href="/listings?category=artics" class="filter <%= activeCategory==='artics' ? 'active' : '' %>">
        <i class="fa-solid fa-snowflake"></i>
        <span>Artics</span>
      </a>

      
    </div>
    <!-- Next Arrow -->
    <button id="filter-next" class="filter-arrow">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
    <div class="tax-toggle ">
          <div class="form-switch tax-switch">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
      </div>

    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 g-4 listings-container">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= (listing.image && listing.image.url) ? listing.image.url : listing.image %>"
            class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"><i class="fa-regular fa-heart" style="color: red;"></i></div>

          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b> <br>
               &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                <i id="tax-info">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>

        </div>
      </a>
      <% } %>
  </div>