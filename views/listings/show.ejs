<% layout("layouts/boilerplate") %>

<div class="container mt-4">

  <!-- TITLE -->
  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <h3><%= listing.title %></h3>
    </div>
  </div>

  <!-- CARD -->
  <div class="row mt-3">
    <div class="col-md-8 mx-auto">
      <div class="card show-card listing-card">

        <img
          src="<%= (listing.image && listing.image.url) ? listing.image.url : listing.image %>"
          class="card-img-top show-img"
          alt="listing_image"
        >

        <div class="card-body">
          <p class="card-text">
            Owned By <i><%= listing.owner.username %></i>
          </p>

          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">₹ <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="card-text"><%= listing.location %></p>
          <p class="card-text"><%= listing.country %></p>

          <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="d-flex gap-2 mt-3">
              <a
                href="/listings/<%= listing._id %>/edit"
                class="btn btn-primary"
              >
                Edit
              </a>

              <form
                method="POST"
                action="/listings/<%= listing._id %>?_method=DELETE"
              >
                <button class="btn btn-danger">
                  Delete
                </button>
              </form>
            </div>
          <% } %>

        </div>
      </div>
    </div>
  </div>

  <!-- REVIEWS -->
  <div class="row mt-4">
    <div class="col-md-8 mx-auto">
      <% if (currUser) { %>
        <h4>Leave a Review</h4>
        <form
          action="/listings/<%= listing._id %>/reviews"
          method="POST"
          novalidate
        >
          <!-- rating + comment form (tumhara existing code yahin rahega) -->
        </form>
      <% } %>
    </div>
  </div>

  <!-- MAP -->
  <div class="row mt-4">
    <div class="col-md-8 mx-auto">
      <h4>Where you'll be</h4>
      <div id="map" style="height: 300px;"></div>
    </div>
  </div>

</div>

